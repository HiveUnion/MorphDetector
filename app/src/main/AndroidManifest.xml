<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" />
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <!-- 查询无障碍服务的权限 -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <!-- 访问网络状态的权限（用于检测VPN） -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 读取手机状态的权限（用于获取IMEI和Serial） -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 使用生物识别功能的权限（用于检测指纹和人脸解锁） -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <!-- 读取日志权限（用于检测 root 工具日志） -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!-- 存储权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestAutoJs"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TestAutoJs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SafPackageListActivity"
            android:exported="false"
            android:label="SAF 包名列表"
            android:theme="@style/Theme.TestAutoJs" />

        <activity
            android:name=".AppListActivity"
            android:exported="false"
            android:label="应用列表"
            android:theme="@style/Theme.TestAutoJs" />

        <!-- LSPosed 模块元数据 -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposeddescription"
            android:value="从文件系统列举中移除 com.hive.morph，修复 CVE-2024-43093 漏洞" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposedentry"
            android:value="com.example.testauto.lsposed.MainHook" />
        <!-- LSPosed 默认作用域：默认勾选 com.android.providers.media.module -->
        <meta-data
            android:name="xposedscope"
            android:value='["com.android.providers.media.module"]' />
    </application>

</manifest>